[includeIf "gitdir:~/src/github.com/PicoSushi/"]
    # Add other accounts like this
    path = ~/src/github.com/PicoSushi/.gitconfig

[core]
    pager = delta --dark


[include]
    path = ~/.gitconfig.local

[color]
    branch       = auto
    decorate     = auto
    diff         = auto
    grep         = auto
    interactive  = auto
    # pager        = auto
    showbranch   = auto
    status       = auto
    ui           = auto

[push]
    default = simple
    followTags = true
[pull]
    ff = only
    rebase = false
[rebase]
    abbreviateCommands = true
    autostash = true
    autosquash = true

[ghq]
    root = ~/src

[alias]
    afk = "! git add -A && git commit -m '[DNM][WIP] afk -- pushing this commit for avoiding code loss, this commit must be deleted later' && git push"

    b   = branch
    ba  = branch --all

    cm  = commit --verbose
    cmm = commit --verbose --message

    chp  = cherry-pick

    fap  = fetch --all --prune

    s    = status --short --branch
    st   = status

    sh   = stash
    shs  = stash save
    shp  = stash pop


    sb  = show-branch
    d   = diff
    force-push = push --force-with-lease

    root = rev-parse --show-toplevel

[github]
    user = picosushi

[diff]
    tool = meld
[difftool "meld"]
    cmd = meld $LOCAL $REMOTE

[merge]
    tool = meld
[mergetool "meld"]
    cmd = meld $LOCAL $BASE $REMOTE --auto-merge --output $MERGED

[magithub]
    online = false
[magithub "status"]
    includeStatusHeader = false
    includePullRequestsSection = false
    includeIssuesSection = false

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[credential]
    helper = cache --timeout=300

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only --dark --features=interactive

[delta]
    true-color = always
    features = decorations
    syntax-theme = Dracula

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax

[advice]
    diverging = false
